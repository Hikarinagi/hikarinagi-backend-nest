# ===================================
# 应用基础配置
# ===================================
NODE_ENV=development
PORT=3005
SITE_BASE_URL=https://your-domain.com

# ===================================
# 数据库配置
# ===================================
# MongoDB 连接字符串
MONGO_URI=mongodb://localhost:27017/hikarinagi

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================================
# JWT 认证配置
# ===================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
HIKARI_ACCESS_TOKEN_EXPIRES_IN=1h
HIKARI_REFRESH_TOKEN_EXPIRES_IN=7d

# ===================================
# 限流配置
# ===================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ===================================
# 邮件服务配置
# ===================================
# 邮件服务提供商 elastic | postal
EMAIL_PROVIDER=elastic
EMAIL_API_KEY=your-email-api-key
EMAIL_ENDPOINT=https://api.elasticemail.com/v2/email/send
EMAIL_SENDER_ADDRESS=noreply@example.com
EMAIL_SENDER_NAME=Hikarinagi

# ===================================
# 应用功能配置
# ===================================
# 是否允许用户注册
ALLOW_REGISTER=true

# 阅读器签名密钥
READER_SIGNATURE_SECRET=your-reader-signature-secret

# 下载签名密钥
DOWNLOAD_SIGNATURE_SECRET=your-download-signature-secret

# ===================================
# Cloudflare R2 存储配置
# ===================================
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# 轻小说存储配置
R2_LIGHTNOVEL_ACCESS_KEY=your-r2-lightnovel-access-key
R2_LIGHTNOVEL_SECRET_KEY=your-r2-lightnovel-secret-key
R2_LIGHTNOVEL_BUCKET=your-lightnovel-bucket

# 图片存储配置
R2_IMAGE_ACCESS_KEY=your-r2-image-access-key
R2_IMAGE_SECRET_KEY=your-r2-image-secret-key
R2_IMAGE_BUCKET=your-image-bucket

# ===================================
# Bangumi API 配置
# ===================================
CLIENT_ID=your-bangumi-client-id
CLIENT_SECRET=your-bangumi-client-secret